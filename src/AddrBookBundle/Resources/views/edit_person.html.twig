{% extends '::base.html.twig' %}

{% block body %}

    <h1>Edycja osoby</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <h1>Adresy osoby</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>L.p.</th>
            <th>Adres</th>
            <th>Usuwanie</th>
        </tr>
        </thead>
        <tbody>
    {% for address in addresses %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ address.city }}, {{ address.street }} {{ address.houseNum }} m. {{ address.flatNum }}</td>
            <td>
                <a href=" {{ path('delete_address_id', {'id' : address.id}) }}">
                    <button type="button" class="btn btn-danger">Usuń</button>
                </a>
            </td>
        </tr>
    {% else %}
        <p>Brak adresów</p>
    {% endfor %}
    </tbody>
    </table>


    <h1>Dodawanie adresu</h1>
    {{ form_start(form2) }}
    {{ form_widget(form2) }}
    {{ form_end(form2) }}

    <br><br>

{% endblock %}